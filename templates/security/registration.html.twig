{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}

    <div class="card">
        <div class="header bg-orange">
            <h2>Inscription sur le site des feedback</h2>
        </div>
        <div class="body">
            {{ form_start(form) }}
            {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
            {{ form_row(form.email, {'label': 'Email'}) }}
            {{ form_row(form.password, {'label': 'Mot de passe'}) }}
            {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe'}) }}
            {{ form_row(form.lastName, {'label': 'Nom'}) }}
            {{ form_row(form.firstName, {'label': 'Pr√©nom'}) }}
            {{ form_row(form.promo, {'label': 'Promo'}) }}

            <button type="submit" class="btn bg-orange center-block"><h4>Inscris toi!</h4></button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}