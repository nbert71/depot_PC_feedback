{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block additionnal_body_class %}
    ls-closed
{% endblock %}

{% block no_menu %}
    no_menu
{% endblock %}

{% block titre_page %}Inscription{% endblock %}


{% block content %}
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header bg-orange text-center">
                <h2>Inscription</h2>
            </div>
            <div class="body">
                {{ form_start(form) }}
                {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
                {{ form_row(form.lastName, {'label': 'Nom'}) }}
                {{ form_row(form.firstName, {'label': 'Pr√©nom'}) }}
                {{ form_row(form.email, {'label': 'Email'}) }}
                {{ form_row(form.promo, {'label': 'Promo'}) }}
                {{ form_row(form.password, {'label': 'Mot de passe'}) }}
                {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe'}) }}
                <button type="submit" class="btn bg-teal center-block">Inscris toi !</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}