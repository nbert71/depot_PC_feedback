{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block titre_page %}Déposer un avis{% endblock %}

{% block content %}
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="header text-center bg-orange">
                <h2>Déposer un avis</h2>
            </div>
            <div class="body">
                {{ form_start(form) }}
                {{ form_row(form.title, {'label': 'Titre de l\'avis'}) }}
                {{ form_row(form.course, {'label': 'Nom du Cours'}) }}

                <div class="petit-gris">
                    Note globale *
                </div>
                <div class="text-center">
                    {{ form_row(form.overall) }}
                </div>

                <div class="petit-gris">
                    Difficulté *
                </div>
                <div class="text-center">
                    {{ form_row(form.difficulty) }}
                </div>

                <div class="petit-gris">
                    Intérêt *
                </div>
                <div class="text-center">
                    {{ form_row(form.interest) }}
                </div>
                <div class="petit-gris">
                    Avis *
                </div>
                {{ form_row(form.comment, {'placeholder': 'Avis'}) }}
                <button type="submit" class="btn bg-teal center-block">
                    {% if edit == true %}
                        Modifier
                    {% else %}
                        Déposer
                    {% endif %}
                </button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}