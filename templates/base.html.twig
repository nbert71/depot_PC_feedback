<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Feedback{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
            <link rel="stylesheet" href="{{ asset('build/vendor.css') }}" />
            <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
        {% endblock %}
    </head>
    <body {% block additionnal_body_block %}{% endblock %} class="theme-teal {% block additionnal_body_class %}{% endblock %}">
        <nav class="navbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    {% if is_granted('ROLE_USER') %}
                        {% block mobile_collapse %}
                            <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                        {% endblock %}
                        <a href="javascript:void(0);" class="bars"></a>
                    {% endif %}

                    <a class="navbar-brand" href="/">
                        Feedback de cours
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('ROLE_USER') %}
                            <li>
                                <a href="">
                                    <i class="material-icons">settings</i>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('user_logout') }}">
                                    <i class="material-icons">power_settings_new</i>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <script src="{{ asset('build/vendor.js') }}"></script>
        <script src="{{ asset('build/app.js') }}"></script>
        <script src="{{ asset('build/runtime.js') }}"></script>

        {% block page_js %}
        {% endblock %}

        <section>
            <aside id="leftsidebar" class="sidebar">
                <div class="menu">
                    <ul class="list">
                        <li class="header">Menu de navigation</li>
                        <li {% if app.request.pathInfo starts with "/page1" %}class="active"{% endif %}>
                            <a href="/">
                                <i class="material-icons">search</i> <span>Liste des cours</span>
                            </a>
                        </li>
                        <li {% if app.request.pathInfo starts with "/page2" %}class="active"{% endif %}>
                            <a href="/" id="link_add">
                                <i class="material-icons">add</i> <span>Liste des feedbacks</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </aside>
        </section>

        <section class="content">
            <div class="container-fluid">
                {% block body %}
                {% endblock %}
            </div>
        </section>
        {% block javascripts %}{% endblock %}
    </body>
</html>